---
import Layout from "../layouts/main.astro";
import ServicesList from "../components/services.astro"
import Button from "../components/button.astro";
import PageHeading from "../components/page-heading.astro";
---

<Layout title="My Services">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="Services"
      description="Here's what I can help you with, whether you're a small business or a growing team"
    />
    <div class="mb-6"></div>
    <ServicesList/>
    <Button text="Contact me" link="/contact" />

  </section>
</Layout>
